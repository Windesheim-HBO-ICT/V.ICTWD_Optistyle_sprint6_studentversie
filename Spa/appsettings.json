{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "mailapi-route": {
        "ClusterId": "mailapi-cluster",
        "Match": {
          "Path": "/mailapi/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "dest1": {
            "Address": "https://localhost:7197/"
          }
        }
      },
      "mailapi-cluster": {
        "Destinations": {
          "dest1": {
            "Address": "https://localhost:7142/"
          }
        }
      }
    }
  }
}
